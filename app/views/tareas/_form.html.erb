<%= form_with(model: [ @proyecto, @requerimiento, @requerimiento.tareas.build ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :descripcion  %><br>
    <%= form.text_field :descripcion, :class => "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :empleado %><br>
    <%= form.text_field :empleado, :class => "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :horas_estimadas %><br>
    <%= form.number_field :horas_estimadas, :class => "form-control"  %>
  </div>
  <p>
    <%= form.submit "Crear tarea", :id => "crear_tarea" %>
  </p>
<% end %>
