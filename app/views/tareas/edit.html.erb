<h2>Cargar horas en tarea <% @tarea.descripcion %></h2>
<hr>
<%= form_for ([@proyecto, @requerimiento, @tarea]), :class => "form-inline" do |form| %>
  <fieldset disabled>
  <div class="form-group">
    <%= form.label :descripcion %><br>
    <%= form.text_field :descripcion, :class => "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :empleado %><br>
    <%= form.text_field :empleado, :class => "form-control"  %>
  </div>
  <div class="form-group form-row">
    <div class="col-6">
    <%= form.label :horas_estimadas %><br>
    <%= form.number_field :horas_estimadas, :class => "form-control"  %>
    </div>
    <div class="col-6">
    <%= form.label :horas_cargadas %><br>
    <%= form.number_field :horas_cargadas, :class => "form-control"  %>
    </div>
  </div>
  </fieldset>
  <div class="form-group form-row">
    <div class="col-6">
    <%= form.label :horas_cargadas %><br>
    <%= form.number_field :horas_cargadas, :class => "form-control"  %>
    </div>
    <div class="col-6">
    <%= form.label :fecha %><br>
    <%= form.date_field :fecha, :class => "form-control"  %>
    </div>
  </div>
  <p>
    <%= form.submit %>
  </p>
<% end %>

