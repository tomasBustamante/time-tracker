<%= form_for ([@proyecto, @requerimiento]) do |form| %>
  <div class="form-group">
    <%= form.label :nombre %><br>
    <%= form.text_field :nombre, :class => "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :descripcion %><br>
    <%= form.text_area :descripcion, :class => "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
